<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <ravecheckout translate="label" module="ravecheckout">
                    <label>Rave Checkout</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <go_live translate="label">
                            <label>Go Live ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </go_live>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
                        <public_key translate="label">
                            <label>Public Key</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[(Required) Your Pay Checkout public key. You can get it from your Rave account dashboard.]]></comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </public_key>
                        <secret_key translate="label">
                            <label>Secret Key</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[(Required) Your Pay Checkout secret key. You can get it from your Rave account dashboard.]]></comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </secret_key>
                        <modal_title translate="label">
                            <label>Modal Title</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[(Optional) The title on the payment modal. Default: RAVE CHECKOUT]]></comment>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </modal_title>
                        <modal_desc translate="label">
                            <label>Modal Description</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[(Optional) The description on the payment modal. Default: RAVE CHECKOUT MODAL]]></comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </modal_desc>
                        <modal_logo translate="label">
                            <label>Modal Logo</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[(Optional) URL to the custom logo to show on the modal. URL should include the 'http'. Default: Rave logo]]></comment>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </modal_logo>
                        <currency translate="label">
                            <label>Charge Currency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ravecheckout/currency</source_model>
                            <comment><![CDATA[(Optional) The currency the customer will be charged in. Default: NGN]]></comment>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </currency>
                        <country translate="label">
                            <label>Charge Country</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ravecheckout/country</source_model>
                            <comment><![CDATA[(Optional) Default: NG: Nigeria]]></comment>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </country>
                        <order_status translate="label">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status_processing</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status>
                    </fields>
                </ravecheckout>
            </groups>
        </payment>
    </sections>
</config>
